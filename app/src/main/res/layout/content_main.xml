<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    tools:context="com.flaminius2k18.app.activity.MainActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:id="@+id/main_content"
        android:layoutAnimation="@anim/main_layout">

        <TextView
            android:id="@+id/about_flaminus"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/about_flaminius"
            android:textColor="@android:color/holo_green_dark"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:gravity="center"
            android:background="@drawable/border"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:elevation="5dp" />

        <TextView
            android:id="@+id/register"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/register"
            android:textColor="@android:color/holo_green_dark"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:gravity="center"
            android:background="@drawable/border"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:elevation="5dp" />

        <TextView
            android:id="@+id/event_info"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/event_info"
            android:textColor="@android:color/holo_green_dark"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:gravity="center"
            android:background="@drawable/border"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:elevation="5dp" />

        <TextView
            android:id="@+id/event_gallery"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/event_gallery"
            android:textColor="@android:color/holo_green_dark"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:gravity="center"
            android:background="@drawable/border"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:elevation="5dp" />

        <TextView
            android:id="@+id/contact_us"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/contact_us"
            android:textColor="@android:color/holo_green_dark"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:gravity="center"
            android:background="@drawable/border"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:elevation="5dp" />

        <TextView
            android:id="@+id/about_college"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/about_college"
            android:textColor="@android:color/holo_green_dark"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:background="@drawable/border"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:elevation="5dp" />
    </LinearLayout>


</android.support.v4.widget.NestedScrollView>
